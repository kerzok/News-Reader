<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/orange"
        app:theme="@style/ToolbarLightOverflow"
        app:popupTheme="@style/Theme.AppCompat" />

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/settings_container"
        android:layout_width="match_parent" android:layout_height="match_parent"
        tools:context="ru.nsmelik.newsreader.activities.EditFeedActivity" tools:ignore="MergeRootFrame" />
</LinearLayout>