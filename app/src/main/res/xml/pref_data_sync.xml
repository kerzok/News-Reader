<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:key="sync_frequency"
        android:title="@string/pref_title_sync_frequency"
        android:entries="@array/pref_sync_frequency_titles"
        android:entryValues="@array/pref_sync_frequency_values"
        android:defaultValue="10800000"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <ListPreference
        android:key="auto_remove_old_articled"
        android:title="@string/auto_remove_old_articles"
        android:entries="@array/auto_remove_titles"
        android:entryValues="@array/auto_remove_values"
        android:defaultValue="604800000"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <ListPreference
        android:key="count_of_articles"
        android:title="@string/count_of_articles"
        android:entries="@array/count_of_articles_title"
        android:entryValues="@array/count_of_articles_value"
        android:defaultValue="50"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

</PreferenceScreen>
